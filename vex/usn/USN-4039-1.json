            "vulnerability": {
                "@id": "https://ubuntu.com/security/notices/USN-4039-1",
                "name": "USN-4039-1",
                "description": "It was discovered that allocation failures could occur in CImg when loading  crafted bmp images. An attacker could possibly use this issue to cause a  denial of service. (CVE-2018-7587)  It was discovered that a heap-based buffer over-read existed in CImg when  loading crafted bmp images. An attacker could possibly use this issue to  execute arbitrary code. (CVE-2018-7588)  It was discovered that a double free existed in CImg when loading crafted  bmp images. An attacker could possibly use this issue to execute arbitrary  code. (CVE-2018-7589)",
                "aliases": [
                    "CVE-2018-7587",
                    "CVE-2018-7588",
                    "CVE-2018-7589"
                ]
            },
